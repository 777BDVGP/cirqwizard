<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import org.cirqwizard.fx.controls.RealNumberTextField?>
<GridPane prefHeight="300.0" prefWidth="170.0" fx:id="view" hgap="10" vgap="15" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
  <columnConstraints>
    <ColumnConstraints halignment="CENTER" prefWidth="50"/>
    <ColumnConstraints prefWidth="80"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
    <RowConstraints />
    <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
  </rowConstraints>
   <children>
       <Button onAction="#home" mnemonicParsing="false" text="Home" prefWidth="120" GridPane.columnSpan="2" >
           <tooltip>
               <Tooltip text="Performs homing needs to be done every time machine is powered up or E-Stop button was used"/>
           </tooltip>
       </Button>
        <Label text="X" GridPane.rowIndex="1" />
        <Label text="Y" GridPane.rowIndex="2" />
        <Label text="Z" GridPane.rowIndex="3" />
        <RealNumberTextField fx:id="xTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#goToUpdatedCoordinates">
            <tooltip>
                <Tooltip text="Press Enter to move machine to the specified location"/>
            </tooltip>
        </RealNumberTextField>
        <RealNumberTextField fx:id="yTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#goToUpdatedCoordinates">
            <tooltip>
                <Tooltip text="Press Enter to move machine to the specified location"/>
            </tooltip>
        </RealNumberTextField>
       <RealNumberTextField fx:id="zTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#goToUpdatedCoordinates">
           <tooltip>
               <Tooltip text="Press Enter to move machine to the specified location"/>
           </tooltip>
       </RealNumberTextField>
        <Button onAction="#moveAway" text="Away" GridPane.rowIndex="4" prefWidth="120" GridPane.columnSpan="2">
            <tooltip>
                <Tooltip text="Moves machine head away to allow access to the bed"/>
            </tooltip>
        </Button>
        <Button onAction="#moveToToolChange" text="Tool change" prefWidth="120" GridPane.rowIndex="5" GridPane.columnSpan="2">
            <tooltip>
                <Tooltip text="Moves machine head to the front for a tool change"/>
            </tooltip>
        </Button>
   </children>
</GridPane>
